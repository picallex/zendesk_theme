<header class="header">

<!-- Botones de redireccion -->
  <div class='left-nav'>
    <div class='header-links'>
      <button class='button-secondary' onclick="location.href = 'https://crm.picallex.com';">
          Retorno al CRM
      </button>
    </div>
    <div class='header-links'>
      <button class='button-secondary' onclick="location.href = '/hc';">
          Help Center
      </button>
    </div>
  </div>

<!-- Acceso a la pagina de PicallEx -->
  <div class="logo">
    {{#link 'help_center'}}
      <img src="{{settings.logo}}" alt="{{t 'home_page' name=help_center.name}}">
    {{/link}}
  </div>

<!-- Generacion de un ticket y perfil de usuario -->
  <div class="nav-wrapper">
    <span class="icon-menu" tabindex="0" role="button" aria-controls="user-nav" aria-expanded="false" aria-label="{{t 'toggle_navigation'}}"></span>
    <nav class="user-nav" id="user-nav">
      {{link 'new_request' class='submit-a-request'}}
    </nav>
    {{user_info}}
  </div>
</header>